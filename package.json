{
  "name": "nodejs-ex",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "cariaga.info@gmail.com <cariaga.info@gmail.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "start": "node server.js",
    "build:server": "babel server-es6.js --out-file server.js",
    "build:client": "webpack -p --config webpack.prod.config.js --progress",
    "build": "better-npm-run build",
    "clean": "rimraf dist/* && rimraf server.js"
  },
  "dependencies": {
    "vue": "^2.5.11",
    "vue-router":"^2.7.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-3": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.4",
    "vue-loader": "^13.0.5",
    "vue-template-compiler": "^2.4.4",
    "webpack": "^3.6.0",
    "webpack-dev-server": "^2.9.1"
  },
  "betterScripts": {
    "build": {
      "command": "npm run clean && npm run build:server && npm run build:client",
      "env": {
        "NODE_ENV": "production"
      }
    }
  }
}
